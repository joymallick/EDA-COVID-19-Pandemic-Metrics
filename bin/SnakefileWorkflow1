rule all:
    input:'../data/owid-covid-data_processed.csv',
        '../data/owid-covid-data_processed_w1.csv',
        '../results/mannwhitneyu.txt',
        '../results/plot_w1.png',



rule clean:
    shell: 'rm ../results/*.png'


rule dataprocessing:
    input:
        cmd='dataprocessing.py',
        csv='../data/owid-covid-data.csv'
    output: '../data/owid-covid-data_processed.csv'
    shell: 'python {input.cmd} -i {input.csv} -o {output}'


rule dataprocessingw1:
    input:
        cmd='dataprocessing_w1.py',
        csv='../data/owid-covid-data_processed.csv'
    output: '../data/owid-covid-data_processed_w1.csv'
    shell: 'python {input.cmd} -i {input.csv} -c "life_expectancy" -o {output}'


rule mannwhitneyu:
    input:
        cmd='mann_whitney_u.py',
        csv='../data/owid-covid-data_processed_w1.csv'
    output: '../results/mannwhitneyu.txt'
    shell: 'python {input.cmd} {input.csv} -c "life_expectancy_cat" -o {output}'

rule plot:
    input:
        mannwhitneyu_test = '../results/mannwhitneyu.txt',
        csv='../data/owid-covid-data_processed_w1.csv'
    output:
        plot = '../results/plot_w1.png',
    run:
        with open(input.mannwhitneyu_test, 'r') as f:
            result = f.read().strip()
        if result == 'True':
            shell('python box_plot_w1.py {input.csv} -c "life_expectancy_cat" -o {output.plot}')
        else:
            shell('python line_plot_w1.py {input.csv} -c "life_expectancy_cat" -o {output.plot}')

