rule all:
    input:'../data/owid-covid-data_processed.csv',
        '../data/owid-covid-data_processed_rq3.csv',
        '../results/plot-1.png'


rule clean:
    shell: rm ../results/*.png


rule dataprocessing:
    input:
        cmd='dataprocessing.py',
        csv='../data/owid-covid-data.csv'
    output: '../data/owid-covid-data_processed.csv'
    shell: 'python {input.cmd} {input.csv} {output}'

rule dataprocessingrq1:
    input:
        cmd='dataprocessing_rq1.py',
        csv='../data/owid-covid-data_processed.csv'
    output: '../data/owid-covid-data_processed_rq1.csv'
    shell: 'python {input.cmd} {input.csv} {output}'


rule plot_deathcases_rq1:
    input:
        cmd='plotdeathcases_rq1.py',
        csv='../data/owid-covid-data_processed_rq1.csv'
    output: '../results/plot-1.png'
    shell: 'python {input.cmd} {input.csv} {output}'


